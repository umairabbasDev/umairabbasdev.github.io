  .brutalist-card {
    font-family: "Courier New", Courier, monospace;
    box-shadow: 10px 10px 0px #000;
    position: relative;
    background-color: #fff;
    color: #000;
    padding: 20px;
  }

  .brutalist-card span {
    font-family: "Courier New", Courier, monospace;
    letter-spacing: 1px;
  }

  .brutalist-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 2px dashed black;
    pointer-events: none;
    box-shadow: 10px 10px 0px rgba(0, 0, 0, 0.5);
  }
</style>
